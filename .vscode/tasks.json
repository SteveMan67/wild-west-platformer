{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Bun Server",
      "type": "process",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "& { $env:DATABASE_URL='postgres://postgres:PopptotheTop7!@localhost:5432/postgres'; bun run ./backend/server.ts }"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Bun Server (Bash)",
      "type": "shell",
      "command": "/home/codespace/.bun/bin/bun run /backend/server.ts",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/bash",
          "args": [
            "-lc"
          ]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}